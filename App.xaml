<Application x:Class="OfficeManagerWPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <!-- Visual Studio Dark Theme 색상 -->
        <SolidColorBrush x:Key="VSBackgroundBrush" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="VSSidebarBrush" Color="#252526"/>
        <SolidColorBrush x:Key="VSAccentBrush" Color="#007ACC"/>
        <SolidColorBrush x:Key="VSTextBrush" Color="#D4D4D4"/>
        <SolidColorBrush x:Key="VSBorderBrush" Color="#3F3F46"/>
        <SolidColorBrush x:Key="VSHoverBrush" Color="#2D2D30"/>
        
        <!-- 전역 Window 스타일 -->
        <Style TargetType="Window">
            <Setter Property="FontFamily" Value="Segoe UI, 맑은 고딕"/>
            <Setter Property="Background" Value="{StaticResource VSBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource VSTextBrush}"/>
        </Style>
        
        <!-- Button 스타일 -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="{StaticResource VSAccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="2" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#005A9E"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- TextBox 스타일 -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource VSBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource VSTextBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource VSBorderBrush}"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        
        <!-- ComboBox 스타일 -->
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="{StaticResource VSBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource VSTextBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource VSBorderBrush}"/>
        </Style>
        
        <!-- DataGrid 스타일 -->
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="{StaticResource VSBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource VSTextBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource VSBorderBrush}"/>
            <Setter Property="RowBackground" Value="#2D2D30"/>
            <Setter Property="AlternatingRowBackground" Value="#252526"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
        </Style>
        
        <!-- DataGridColumnHeader 스타일 -->
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="{StaticResource VSSidebarBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource VSTextBrush}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="{StaticResource VSBorderBrush}"/>
        </Style>
    </Application.Resources>
</Application>
