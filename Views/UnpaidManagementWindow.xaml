<Window x:Class="OfficeManagerWPF.Views.UnpaidManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="미수금 관리" 
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5"
        Icon="pack://application:,,,/Resources/app.ico">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 헤더 -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="미수금 관리" FontSize="24" FontWeight="Light"/>
            <TextBlock x:Name="PeriodText" 
                       Text="2025년 02월" 
                       FontSize="16" 
                       Foreground="#999999"
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- 통계 카드 -->
        <Border Grid.Row="1" 
                Background="#FFF3E0" 
                CornerRadius="12" 
                Padding="20"
                Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="총 미수금" FontSize="14" Foreground="#666666"/>
                    <TextBlock x:Name="TotalUnpaidText" 
                               Text="0원" 
                               FontSize="24" 
                               FontWeight="Medium" 
                               Foreground="#FF9800"
                               Margin="0,5,0,0"/>
                </StackPanel>

                <Border Grid.Column="1" 
                        Background="White" 
                        CornerRadius="12" 
                        Padding="20">
                    <StackPanel>
                        <TextBlock x:Name="UnpaidCountText" 
                                   Text="0" 
                                   FontSize="28" 
                                   FontWeight="Medium" 
                                   Foreground="#FF9800"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="건" 
                                   FontSize="13" 
                                   Foreground="#666666"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- 미수금 업체 리스트 -->
        <DataGrid Grid.Row="2" 
                  x:Name="UnpaidCompaniesDataGrid"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  Background="White"
                  BorderBrush="#E0E0E0"
                  GridLinesVisibility="None"
                  HeadersVisibility="Column">
            <DataGrid.Columns>
                <DataGridTextColumn Header="업체명" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="구분" Binding="{Binding Type}" Width="100"/>
                <DataGridTextColumn Header="미납금액" Binding="{Binding MonthlyFee, StringFormat=N0}" Width="120"/>
                <DataGridTextColumn Header="담당자" Binding="{Binding ContactPerson}" Width="120"/>
                <DataGridTextColumn Header="연락처" Binding="{Binding PhoneNumber}" Width="130"/>
                <DataGridTextColumn Header="이메일" Binding="{Binding Email}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- 하단 버튼 -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="닫기" 
                    Padding="20,10" 
                    Background="White"
                    BorderBrush="#E0E0E0"
                    Cursor="Hand"
                    Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
