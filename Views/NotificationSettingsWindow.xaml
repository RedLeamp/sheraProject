<Window x:Class="OfficeManagerWPF.Views.NotificationSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="알림 설정" Height="600" Width="700"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 제목 -->
        <TextBlock Grid.Row="0" Text="📧 SMS/이메일 자동 알림 설정" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

        <!-- SMS 설정 -->
        <Border Grid.Row="1" BorderBrush="{StaticResource VSBorderBrush}" BorderThickness="1" CornerRadius="4" Padding="15" Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="📱 SMS 설정" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>
                
                <TextBlock Text="SMS API Key:" Margin="0,0,0,5"/>
                <TextBox x:Name="txtSmsApiKey" Height="30" Margin="0,0,0,10"/>
                
                <TextBlock Text="SMS API Secret:" Margin="0,0,0,5"/>
                <PasswordBox x:Name="txtSmsApiSecret" Height="30" Margin="0,0,0,10"/>
                
                <TextBlock Text="발신 번호:" Margin="0,0,0,5"/>
                <TextBox x:Name="txtSmsSenderNumber" Height="30" Margin="0,0,0,5"/>
                
                <TextBlock Text="* SMS API는 알리고(https://smartsms.aligo.in), 카카오 알림톡 등을 사용하실 수 있습니다." 
                           FontSize="11" Foreground="Gray" TextWrapping="Wrap"/>
            </StackPanel>
        </Border>

        <!-- 이메일 설정 -->
        <Border Grid.Row="2" BorderBrush="{StaticResource VSBorderBrush}" BorderThickness="1" CornerRadius="4" Padding="15" Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="📧 이메일 설정" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>
                
                <TextBlock Text="SMTP 서버:" Margin="0,0,0,5"/>
                <TextBox x:Name="txtSmtpServer" Text="smtp.gmail.com" Height="30" Margin="0,0,0,10"/>
                
                <TextBlock Text="SMTP 포트:" Margin="0,0,0,5"/>
                <TextBox x:Name="txtSmtpPort" Text="587" Height="30" Margin="0,0,0,10"/>
                
                <TextBlock Text="발신 이메일:" Margin="0,0,0,5"/>
                <TextBox x:Name="txtEmailAddress" Height="30" Margin="0,0,0,10"/>
                
                <TextBlock Text="이메일 비밀번호:" Margin="0,0,0,5"/>
                <PasswordBox x:Name="txtEmailPassword" Height="30" Margin="0,0,0,5"/>
                
                <TextBlock Text="* Gmail 사용 시 '앱 비밀번호'를 생성하여 입력하세요 (2단계 인증 필요)" 
                           FontSize="11" Foreground="Gray" TextWrapping="Wrap"/>
            </StackPanel>
        </Border>

        <!-- 알림 일정 안내 -->
        <Border Grid.Row="3" BorderBrush="{StaticResource VSBorderBrush}" BorderThickness="1" CornerRadius="4" Padding="15">
            <StackPanel>
                <TextBlock Text="⏰ 자동 알림 일정" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>
                
                <TextBlock TextWrapping="Wrap" LineHeight="22" Foreground="{StaticResource VSTextBrush}">
                    <Run Text="📅 미수금 안내 (월 3회)" FontWeight="SemiBold"/><LineBreak/>
                    • 월초 (1일): 미수금 업체에 납입 안내<LineBreak/>
                    • 월중순 (15일): 미수금 업체에 재안내<LineBreak/>
                    • 월말 (말일): 최종 납입 독촉<LineBreak/>
                    <LineBreak/>
                    <Run Text="💰 월세 납입 안내 (월 3회)" FontWeight="SemiBold"/><LineBreak/>
                    • 7일 전: 월세 납입 사전 안내<LineBreak/>
                    • 3일 전: 월세 납입 리마인드<LineBreak/>
                    • 당일: 월세 납입 당일 안내<LineBreak/>
                    <LineBreak/>
                    <Run Text="* 알림은 매일 오전 9시에 자동으로 발송됩니다." Foreground="Orange"/>
                </TextBlock>
            </StackPanel>
        </Border>

        <!-- 버튼 -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="테스트 발송" Width="100" Height="35" Margin="0,0,10,0" Click="TestNotification_Click"/>
            <Button Content="저장" Width="100" Height="35" Margin="0,0,10,0" Click="Save_Click"/>
            <Button Content="취소" Width="100" Height="35" Click="Cancel_Click" Background="#555"/>
        </StackPanel>
    </Grid>
</Window>
