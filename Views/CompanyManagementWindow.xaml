<Window x:Class="OfficeManagerWPF.Views.CompanyManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="업체 관리" 
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 헤더 -->
        <TextBlock Grid.Row="0" Text="업체 관리" FontSize="24" FontWeight="Light" Margin="0,0,0,20"/>

        <!-- 검색 및 필터 -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox Grid.Column="0" 
                     x:Name="SearchTextBox"
                     Padding="10" 
                     FontSize="14"
                     Background="White"
                     BorderBrush="#E0E0E0"/>

            <Button Grid.Column="2" 
                    Content="업체 추가" 
                    Padding="15,10" 
                    Background="#333333"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"/>
        </Grid>

        <!-- 업체 리스트 -->
        <DataGrid Grid.Row="2" 
                  x:Name="CompaniesDataGrid"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  Background="White"
                  BorderBrush="#E0E0E0"
                  GridLinesVisibility="None"
                  HeadersVisibility="Column">
            <DataGrid.Columns>
                <DataGridTextColumn Header="업체명" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="구분" Binding="{Binding Type}" Width="100"/>
                <DataGridTextColumn Header="계약일자" Binding="{Binding ContractDate, StringFormat=yyyy-MM-dd}" Width="120"/>
                <DataGridTextColumn Header="월이용료" Binding="{Binding MonthlyFee, StringFormat=N0}" Width="120"/>
                <DataGridTextColumn Header="담당자" Binding="{Binding ContactPerson}" Width="120"/>
                <DataGridTextColumn Header="연락처" Binding="{Binding PhoneNumber}" Width="130"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- 하단 버튼 -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="닫기" 
                    Padding="20,10" 
                    Margin="10,0,0,0"
                    Background="White"
                    BorderBrush="#E0E0E0"
                    Cursor="Hand"
                    Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
